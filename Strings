/*
1. character at index i is str.charAt(i);
2. length of the string is str.length();
3. iterate a string ->  for loop
4. to convert string to uppercase, str.toUpperCase()
5. to convert string to lowercase, str.toLowerCase()
6. string comparison -> str.equals(str2) -> true/false
7. replace a character with another character -> str.replace(prevChar, newChar)
8. replace a string with another string -> str.replaceAll(prevString, newString)
 
public class StringsTutorial {
    public static void main(String[] args) {
        String str = "Nithin Munaga";
         arr[2] -> str.charAt(2)
         System.out.println("Character at index 2 is " + str.charAt(2));
         System.out.println("Length of the string is " + str.length());
         for(int i=0; i<str.length(); i++) {
            System.out.println("Char is " + str.charAt(i));
        }
        System.out.println("In capital letters " + str.toUpperCase());
        System.out.println("In small letters " + str.toLowerCase());
        if(str.equals("Nithinn Munaga")) {
            System.out.println("Both the strings are equal");
        }
        else {
            System.out.println("Both the strings are not equal");
        }
        str = str.replace(' ', '"');
        str = str.replaceAll("thin", "fat");
        System.out.println("New string will be " + str);
    }
}
*/
